/* pages/schoolnavigation/news.wxss */
swiper{
    width:100%;
    height:500rpx
}
swiper image{
    width:100%;
    height:500rpx
}
.post-container{
  display:flex;
  flex-direction:column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: white;
  border-bottom: 1px solid #ededed; 
  border-top: 2px solid #ededed; 
  padding-bottom: 20rpx;
}
.post-autor-date{
  margin:10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height:60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom:5px;
  font-size: 26rpx;
}
.post-image{
    margin-left: 16rpx;
    width:100%;
    height:500rpx;
    margin:auto 0;
    margin-bottom: 15rpx;
}
.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom: 20rpx;
    padding-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size:13rpx;
    flex-direction: row;
    line-height: 16rpx;
    margin-left:20rpx
}
.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align: middle;
}
.post-like-font{
    vertical-align: middle;
    margin-right: 20rpx;
    font-size: 20rpx;
}
