.header {
    position: fixed;
    width: 100%;
    height: 60rpx;
    background: #661AFF;
    
    left: 0;
    z-index: 99;
    display: flex;
    padding-left: 30rpx;
}

.header .item {
    text-align: center;
    font-size: 34rpx;
    color: #fff;
    width: 120rpx;
}

.header .add {
    text-align: center;
    line-height: 55rpx;
    background-color: #fff;
    border-radius: 10rpx;
    color: #661AFF;
    height: 55rpx;
    width: 140rpx;
    margin-left: 80rpx;
    font-size: 32rpx;
    
    right: 10rpx;
}

.header .on {
    font-weight: bold;
    border-bottom: 8rpx solid #fff;
}



.task-item {
    margin-left: 50rpx;
    width: 650rpx;
    border: 2rpx solid #ddd;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 2rpx rgba(0,0,0,0.05);
    font-size: 28rpx;
    margin-bottom: 30rpx;
}

.task-item-title {
    padding: 20rpx;
    color: #47a86c;
    background-color: rgba(0,0,0,0.05);
    border-color: #ddd;
    border-top-left-radius: 6rpx;
    border-top-right-radius: 6rpx;
    font-weight: bold;
    font-size: 36rpx;
    line-height: 60rpx;
}

.task-item-title .state {
    font-size: 30rpx;
    line-height: 35rpx;
    text-align: right;
}

.task-item-title .number {
    font-weight: normal;
    color: #515151;
    font-size: 24rpx;
    line-height: 25rpx;
}

.task-item-title image {
    border-radius: 10rpx;
    width: 160rpx;
    height: 120rpx;
    float: right;
    overflow: hidden;
    margin-top: 0;
}

.task-item-title .now {
    float: right;
    overflow: hidden;
    margin-top: 0;
}

.task-item-content {
    right: 0;
    padding: 20rpx;
    padding-top: 10rpx;
    color: #515151;
    font-size: 26rpx;
}