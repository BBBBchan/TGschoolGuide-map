/*筛选项容器布局*/


/*筛选项隐藏 显示动画 start*/
@keyframes slidup {
  from {
    transform: translateY(0%);
  }

  to {
    transform: translateY(-127%);
  }
}

.slidup {
  display: block;
  animation: slidup 0.4s ease-in both;
  width: 100%;
  height: 650rpx;
  background-color: #ffffff;
  position: absolute;
  z-index: 50;
  top: 108vh;
}

